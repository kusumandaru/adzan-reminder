{
    "name": "adzan-reminder",
    "displayName": "adzan-reminder",
    "description": "reminder adzan notification",
    "version": "1.3.0",
    "publisher": "kusumandaru",
    "author": {
        "name": "Angga Kusumandaru",
        "email": "angga.kusumandaru@gmail.com"
    },
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "icon": "assets/mosque.png",
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Adzan schedule configuration",
            "properties": {
                "adzan-reminder.city": {
                    "type": "string",
                    "default": "Jakarta",
                    "description": "selected city"
                },
                "adzan-reminder.country": {
                    "type": "string",
                    "default": "Indonesia",
                    "description": "selected country"
                },
                "adzan-reminder.showPraytime": {
                    "type": "boolean",
                    "default": true,
                    "description": "show adzan when comes"
                }
            }
        },
        "commands": [
            {
                "command": "adzan.simple",
                "title": "Adzan schedule for recent"
            },
            {
                "command": "adzan.today",
                "title": "Adzan schedule for today"
            }
        ],
        "keybindings": [
            {
                "command": "adzan.simple",
                "key": "ctrl+shift+a",
                "mac": "cmd+shift+a"
            },
            {
                "command": "adzan.today",
                "key": "ctrl+shift+1",
                "mac": "cmd+shift+1"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test-compile": "tsc -p ./",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "js-yaml": "^3.13.1",
        "ts-loader": "^8.0.12",
        "tslint": "^5.8.0",
        "typescript": "^3.2.2",
        "vscode": "^1.1.21",
        "webpack": "^5.11.1",
        "webpack-cli": "^4.3.0"
    },
    "dependencies": {
        "codic": "^2.0.6",
        "event-stream": "3.3.4",
        "fstream": "^1.0.12",
        "https-proxy-agent": "^2.2.4",
        "lodash": "4.17.19",
        "moment": "^2.24.0",
        "node.extend": ">=1.1.7",
        "request": "^2.88.0",
        "request-promise": "^4.2.2",
        "tar": "^4.4.2",
        "vscode-test": "^1.4.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kusumandaru/adzan-reminder.git"
    },
    "keywords": [
        "Reminder",
        "Adzan",
        "Pray time",
        "Schedule"
    ]
}
